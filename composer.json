{
    "name": "neurony/laravel-sort",
    "description": "Sort Eloquent model records by their attributes or relationships",
    "license": "MIT",
    "keywords": [
        "laravel",
        "sort",
        "order",
        "eloquent",
        "model",
        "relations"
    ],
    "minimum-stability": "dev",
    "authors": [
        {
            "name": "Andrei Badea",
            "email": "zbiller@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2",
        "illuminate/contracts": "^6.0|^7.0|^8.0",
        "illuminate/support": "^6.0|^7.0|^8.0",
        "laravel/framework": "^6.0|^7.0|^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "^4.0",
        "phpunit/phpunit": "~7.0|^8.0"
    },
    "autoload": {
        "psr-4": {
            "Neurony\\Sort\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Neurony\\Sort\\Tests\\": "tests/"
        },
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "scripts": {
        "test": "phpunit"
    },
    "config": {
        "sort-packages": true
    }
}
